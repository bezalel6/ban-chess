# Copy this file to .env.local for local development
# or set these variables in your production environment

# ============================================
# REQUIRED ENVIRONMENT VARIABLES
# ============================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Site URL - Used by Supabase Auth for redirects
# Local: http://localhost:3000
# Production: https://your-domain.com
SITE_URL=http://localhost:3000

# ============================================
# OPTIONAL ENVIRONMENT VARIABLES
# ============================================

# NextAuth (if using)
NEXTAUTH_SECRET=generate_a_secret_here
NEXTAUTH_URL=http://localhost:3000

# Database URL (for direct Prisma connections if needed)
DATABASE_URL=postgresql://postgres:password@localhost:5432/next-chess

# Supabase JWT Secret (for local development)
SUPABASE_JWT_SECRET=your-jwt-secret-with-at-least-32-characters

# UploadThing (for bug reports with attachments)
UPLOADTHING_TOKEN=your_uploadthing_token
UPLOADTHING_SECRET=your_uploadthing_secret
UPLOADTHING_APP_ID=your_uploadthing_app_id

# Webhook Secrets
AUTH_WEBHOOK_SECRET=your_webhook_secret_if_using_webhooks

# SMTP Configuration (if not using Supabase's built-in email)
SMTP_PASSWORD=your_smtp_password

# Management API (for pushing email templates)
SUPABASE_ACCESS_TOKEN=your_management_api_token
PROJECT_REF=your_project_ref

# Development Settings
SKIP_ENV_VALIDATION=true  # Only for development
NODE_ENV=development      # development | production

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000